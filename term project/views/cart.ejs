<!DOCTYPE html>
<html>
  <head>
    <title>My Shopping Cart</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <style>
      body {
        background: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
        color: #333;
      }
      h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #007bff;
      }
      .cart-container {
        max-width: 600px;
        margin: 0 auto;
        margin-top: 50px;
        background-color: #fff;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      .table {
        background-color: #fff;
      }
      .table th {
        background-color: #f8f9fa;
        color: #333;
        font-weight: bold;
      }
      .table td {
        vertical-align: middle;
      }
      .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
      }
      .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
      }
      .total-row {
        background-color: #f8f9fa;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <div class="container">
      <div class="cart-container">
        <h1>My Shopping Cart</h1>
        <% var total = 0%>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% cart.forEach(item => { %> <% total += Number(item.price) %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td>
                <a href="/cart/remove/<%= item._id %>" class="btn btn-danger"
                  >Remove Item</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr class="total-row">
              <td colspan="2" style="text-align: end">Total</td>
              <td><%= total %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>
